<?xml version="1.0" encoding="utf-8" ?>

<hud>
  <base name="radar" type ="sprite">
    <sprite>radar</sprite>
    <vector>1,1</vector>
    <scaling>8,8</scaling>

    <child name="Frame" type ="sprite">
      <sprite>radarframe</sprite>
      <vector>0,0</vector>
      <scaling>8,8</scaling>
    </child>
  </base>

  <base name="tracker" type="sprite">
    <sprite>uitracker</sprite>
    <vector>1,0.5</vector>
    <scaling>8,8</scaling>

    <child name="ShipDisplay" type="sprite">
      <sprite>radarblip</sprite>
      <vector>0.5,0.68</vector>
      <scaling>3,3</scaling>
    </child>

    <child name="ShipName" type="text">
      <font>fontMain</font>
      <vector>0.55,-0.28</vector>
      <scaling>2,2</scaling>           
    </child>

    <child name="TargetVelocity" type="text">
      <font>fontMain</font>
      <vector>0.55,-0.28</vector>
      <scaling>1,1</scaling>
    </child>
      
  </base>
</hud>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                          